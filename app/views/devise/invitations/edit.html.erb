<div class="flex flex-wraper justify-center my-32">
  <div class="md:shadow-md rounded px-6 py-6 bg-white">
    <div class="flex flex-wrap justify-center mt-1 mb-5 border-b border-grey-dark pb-3">
      <span class=""><%= t "devise.invitations.edit.header" %></span>
    </div>
<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), class: "w-full max-w-md", html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>
    <div class="flex flex-wrap -mx-3 mb-7">
      <div class="w-full px-3 focus_form mb-3">
        <%= f.label :contraseña, class: 'label_input' %>
        <%= f.password_field :password, class: 'field_input rounded-t' %>
      </div>
      <div class="w-full px-3 focus_form">
        <%= f.label :confirmar_contraseña, class: 'label_input' %>
        <%= f.password_field :password_confirmation, class: 'field_input rounded-t' %>
      </div>
    </div>
    <div class="md:flex md:items-center justify-center mt-8">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn-primary w-full" %>
    </div>
  <% end %>
  </div>
</div>
