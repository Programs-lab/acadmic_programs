<% link = pagy_link_proc(pagy, 'class= "pagy-link"') %>
<nav aria-label="pager" class="pagy_nav pagination flex w-full justify-center items-center mt-2" role="navigation">
<div class="flex w-32 justify-end mr-1">
  <% if pagy.prev %>
    <span class="page">
      <%== link.call(pagy.prev, "<i class='fas fa-caret-left'></i>", 'aria-label="previous"') %>
    </span>
  <% else %>
  <span class="page text-grey-light"><%== "<i class='fas fa-caret-left'></i>" %></span>
  <% end %>
</div>
<div class="flex w-auto justify-between">
  <% pagy.series.each do |item| %>
    <% if item.is_a?(Integer) %>
    <span class="page"><%== link.call(item) %></span>
    <% elsif item.is_a?(String) %>
    <span class="page current"><%= item %></span>
    <% elsif item == :gap %>
    <span class="page gap"><%== pagy_t('pagy.nav.gap') %></span>
    <% end %>
  <% end %>
</div>
<div class="flex w-32 ml-1">
  <% if pagy.next %>
    <span class="page">
      <%== link.call(pagy.next, "<i class='fas fa-caret-right'></i>", 'aria-label="next"') %>
    </span>
  <% else %>
  <span class="page text-grey-light"><%== "<i class='fas fa-caret-right '></i>" %></span>
  <% end %>
</div>
</nav>
