<%= render  'appointment_reports/patient_info', patient: @patient  %>
<% @appointment_reports.each_with_index do |appointment_report, index| %>
  <br/>
  <div class="row">
    <div class="col s12">
    <p><b>Fecha: </b><%= "#{appointment_report.appointment_datetime.strftime('%d/%m/%Y')}" %></p>
    <p><%= appointment_report.diagnosis.html_safe %></p>
    </div>
    <!-- <div class="col s12"> -->
    <!-- <p><b>Atendido por: </b><%= " Dr. #{appointment_report.doctor.first_name} #{appointment_report.doctor.last_name} " %></p> -->
    <!-- </div> -->
    <!-- </div> -->
  <div class="row">
    <% appointment_report.appointment_report_annotations.each do |ar| %>
      <div class="col s12">
        <p><b>Anotacion despues de cerrada la atencion</p></b>
        <p><b>Fecha: </b><%= "#{ar.created_at.strftime('%d/%m/%Y')}" %></p>
        <p><%= ar.content.html_safe %></p>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col s12">
        <p><b>Atendido por: </b><%= " Dr. #{appointment_report.doctor.first_name} #{appointment_report.doctor.last_name} " %></p>
    </div>
  </div>
  <% end %>

