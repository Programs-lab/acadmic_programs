<%= render  'shared/card' do %>
  <div class="flex px-4">
    <div class="w-2/3">
    </div>
    <div class="w-1/3 text-right">
    </div>
  </div>
  <div id="medical_record" class="w-full px-4">
    <div class="my-4 flex">
      <div class="w-1/2">
        <h4 class="font-semibold text-g-d4 text-lg">
          Citas
          <br><span class="font-medium text-sm text-g-d2">Citas programadas para: <%= Date.today %></span>
        </h4>
      </div>
    </div>
    <div class="divider"></div>
    <div class="flex flex-wrap w-full">
      <div class="flex flex-wrap w-full mb-4">
        <h3 class="font-semibold text-grey-darkest text-lg"> Mark Brown </h3>
      </div>
      <div class="flex flex-wrap w-full">
        <div class="flex w-1/3">
          <div class="flex w-1/3 mr-2 items-center">
            <%= icon('fas','calendar', class: 'fa-xs mr-1')%>
            Lunes
          </div>
          <div class="flex w-1/3 ml-2 items-center">
            <%= icon('fas','clock', class: 'fa-xs mr-1')%>
            <%= Time.now.strftime("%I:%M %P") %>
          </div>
          <div class="flex w-1/3 pl-8">
            <a class="btn btn-primary mr-1" href="#">
              <%= icon('fas','paper-plane', class: 'fa-xs')%>
            </a>
            <a class="btn btn-red-light" href="#">
              <%= icon('fas','ban', class: 'fa-xs')%>
            </a>
          </div>
        </div>
      </div>
      <div class="flex flex-wrap w-full mt-4">
        <h3 class="text-grey-darker text-sm"> Motivo de cita: Consulta Externa </h3>
      </div>
    </div>
    <div class="divider"></div>

    <div class="flex flex-wrap w-full">
      <div class="flex flex-wrap w-full mb-4">
        <h3 class="font-semibold text-grey-darkest text-lg"> Cristian Brown </h3>
      </div>
      <div class="flex flex-wrap w-full">
        <div class="flex w-1/3">
          <div class="flex w-1/3 mr-2 items-center">
            <%= icon('fas','calendar', class: 'fa-xs mr-1')%>
            Miercoles
          </div>
          <div class="flex w-1/3 ml-2 items-center">
            <%= icon('fas','clock', class: 'fa-xs mr-1')%>
            <%= Time.now.strftime("%I:%M %P") %>
          </div>
          <div class="flex w-1/3 pl-8">
            <a class="btn btn-primary mr-1" href="#">
              <%= icon('fas','paper-plane', class: 'fa-xs')%>
            </a>
            <a class="btn btn-red-light" href="#">
              <%= icon('fas','ban', class: 'fa-xs')%>
            </a>
          </div>
        </div>
      </div>
      <div class="flex flex-wrap w-full mt-4">
        <h3 class="text-grey-darker text-sm"> Motivo de cita: Examen EDGC </h3>
      </div>
    </div>
    <div class="divider"></div>
  </div>
