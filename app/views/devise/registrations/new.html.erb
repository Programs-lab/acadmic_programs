<%= render "devise/shared/error_messages", resource: resource %>
<div class="flex flex-wraper justify-center my-32">
  <div class="md:shadow-md rounded px-6 py-6 bg-white">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "w-full max-w-md") do |f| %>
    <div class="flex flex-wrap justify-center mt-1 mb-6 border-b border-grey-dark pb-4">
      <span class="">Formulario de Registro</span>
    </div>
    <div class="flex flex-wrap -mx-3 mb-5">
      <div class="w-full md:w-1/2 px-3 mb-5 md:mb-0 focus_form">
        <label class="label_input" for="grid-first-name">
          Nombre</label>
        <input class="field_input" type="text" onclick="">
      </div>
      <div class="w-full md:w-1/2 px-3 focus_form">
        <label class="label_input" for="grid-last-name">
          Apellido
        </label>
        <input class="field_input" id="grid-last-name" type="text" >
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-5">
      <div class="w-full md:w-1/2 px-3 mb-5 md:mb-0 focus_form">
        <label class="label_input" for="grid-state">
          Tipo de documento
        </label>
        <div class="relative">
          <select class="block appearance-none w-full border-b text-grey-darker py-3 px-4 pr-8 focus:outline-none bg-white focus:border-grey h-8" id="grid-state">
            <option class="bg-primary">C.C</option>
            <option>Missouri</option>
            <option>Texas</option>
          </select>
        </div>
      </div>
      <div class="w-full md:w-1/2 px-3 focus_form">
        <label class="label_input" for="grid-last-name">
          N° documento
        </label>
        <input class="field_input" type="number" >
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-5">
      <div class="w-full md:w-1/2 px-3 mb-5 md:mb-0 focus_form">
        <label class="label_input" for="grid-first-name">
          Telefono
        </label>
        <input class="field_input" type="number" >
      </div>
      <div class="w-full md:w-1/2 px-3 ">
        <label class="label_input" for="grid-state">
          Empresa de afiliación
        </label>
        <div class="relative">
          <select class="block appearance-none w-full border-b text-grey-darker py-3 focus:outline-none bg-white focus:border-grey h-8" id="grid-state">
            <option class="bg-primary">Nueva EPS</option>
            <option>Missouri</option>
            <option>Texas</option>
          </select>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-5">
      <div class="w-full md:w-1/2 px-3 mb-5 md:mb-0 focus_form">
        <label class="label_input" for="grid-first-name">
          Ocupación
        </label>
        <input class="field_input" type="number" >
      </div>
      <div class="w-full md:w-1/2 px-3 ">
        <label class="label_input" for="grid-first-name">
          Fecha de nacimiento
        </label>
        <input class="field_input" id="grid-first-name" type="date" placeholder="Jane">
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-5">
      <div class="w-full px-3 focus_form">
        <label class="label_input" for="grid-password">
          Dirección
        </label>
        <input class="field_input" id="grid-password" type="text" >
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-5">
      <div class="w-full px-3 focus_form">
        <%= f.label :email, class: 'label_input' %>
        <%= f.email_field :email, autocomplete: "email", class: 'field_input rounded-t' %>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3 focus_form">
        <%= f.label :contraseña, class: 'label_input' %>
        <%= f.password_field :password, class: 'field_input rounded-t' %>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3 focus_form">
        <%= f.label :confirmar_contraseña, class: 'label_input' %>
        <%= f.password_field :password_confirmation, class: 'field_input rounded-t' %>
      </div>
    </div>
    <div class="md:flex md:items-center justify-center mt-6">
      <%= f.submit "Registrar", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
  </div>
</div>
